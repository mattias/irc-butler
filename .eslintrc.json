{
  "extends": "eslint:recommended",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "no-console": 0,
    "no-unused-vars": [
      2,
      {
        // Allow unused arg if starts with _
        "argsIgnorePattern": "^_"
      }
    ],
    "no-warning-comments": [
      1,
      {
        "terms": ["todo", "fixme"],
        "location": "anywhere"
      }
    ],
    "semi": [2, "always"],
    "no-unreachable": 2
  }
}
